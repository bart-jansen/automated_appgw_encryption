{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "_artifactsLocation": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/bart-jansen/automated_appgw_encryption/master/arm/"
        },
        "rgName": {
            "type": "string",
            "metadata": {
                "description": "The resource group name"
            }
        },
        "rgLocation": {
            "type": "string",
            "metadata": {
                "description": "Location for deployment"
            }
        },
        "appGWDnsName": {
            "type": "string",
            "metadata": {
                "description": "DNS prefix used by the app gateway IP"
            }
        },
        "appGwSslEmail": {
            "type": "string",
            "defaultValue": "user@exampledomain.com"
        }
    },
    "variables": {
        "functionAppName": "[concat('appgwfn-', uniquestring(parameters('appGWDnsName')))]",
        "keyVaultName": "[concat('keyvault-', uniquestring(parameters('appGWDnsName')))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[parameters('rgLocation')]",
            "name": "[parameters('rgName')]"
        },
        {
            "resourceGroup": "[parameters('rgName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "vnet",
            "dependsOn": [
                "[parameters('rgName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/vnet/azuredeploy.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "resourceGroup": "[parameters('rgName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "appgw",
            "dependsOn": [
                "vnet"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/appgw/azuredeploy.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters":{  
                    "applicationGatewaySubnetId": {
                        "value": "[reference('vnet').outputs.appgwSubnetId.value]"
                    },
                    "azureFunctionName": {
                        "value": "[variables('functionAppName')]"
                    },
                    "dnsNamePrefix":{
                        "value": "[parameters('appGWDnsName')]"
                    }
                }
            }
        },
        {
            "resourceGroup": "[parameters('rgName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "keyvault",
            "dependsOn": [
                "[parameters('rgName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/keyvault/azuredeploy.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "keyVaultName": {
                        "value": "[variables('keyVaultName')]"
                    }
                }
            }
        },
        {
            "resourceGroup": "[parameters('rgName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "functions",
            "dependsOn": [
                "[parameters('rgName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/functions/azuredeploy.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "functionAppName": {
                        "value": "[variables('functionAppName')]"
                    },
                    "appGwSslEmail": {
                        "value": "[parameters('appGwSslEmail')]"
                    },
                    "keyVaultName": {
                        "value": "[variables('keyVaultName')]"
                    }
                }
            }
        },
        {
            "resourceGroup": "[parameters('rgName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "configure-functions",
            "dependsOn": ["keyvault", "functions", "appgw"],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/functions/configure.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "functionAppName": {
                        "value": "[variables('functionAppName')]"
                    }
                }
            }
        },
        {
            "resourceGroup": "[parameters('rgName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "msi",
            "dependsOn": ["appgw", "keyvault", "functions", "configure-functions"],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/msi/azuredeploy.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "functionAppName": {
                        "value": "[variables('functionAppName')]"
                    },
                    "identityName": {
                        "value": "[reference('functions').outputs.identityName.value]"
                    },
                    "vaultName": {
                        "value": "[variables('keyVaultName')]"
                    },
                    "objectId": {
                        "value": "[reference('functions').outputs.principalId.value]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "fqdn": {
            "type":"string",
            "value": "[reference('appgw').outputs.fqdn.value]"
        }
    }
}